{% extends 'base.html.twig' %}

{% block title %}Compagnies index{% endblock %}

{% block body %}
    <h1>Compagnies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompagnyName</th>
                <th>CompagnyEmail</th>
                <th>CompagnyPassword</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compagny in compagnies %}
            <tr>
                <td>{{ compagny.id }}</td>
                <td>{{ compagny.compagnyName }}</td>
                <td>{{ compagny.compagnyEmail }}</td>
                <td>{{ compagny.compagnyPassword }}</td>
                <td>
                    <a href="{{ path('app_compagnies_show', {'id': compagny.id}) }}">show</a>
                    <a href="{{ path('app_compagnies_edit', {'id': compagny.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_compagnies_new') }}">Create new</a>
{% endblock %}
